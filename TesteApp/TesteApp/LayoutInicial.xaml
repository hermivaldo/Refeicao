<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TesteApp.LayoutInicial" Title="Cadastro de Refeição">
    <ContentView Padding="14">
      <StackLayout>
        
        <Entry Placeholder="File de frango" x:Name="txtRefeicao"> </Entry>

        <StackLayout Orientation="Horizontal">
          <Label Text="Calorias"></Label>
          <Label Text="10" x:Name="lblCalorias"></Label>
        </StackLayout>

        <Slider Minimum="0" Maximum="1000" x:Name="stpcalorias" ValueChanged="AtualizaContador"></Slider>

        <StackLayout Orientation="Horizontal">
          <Button Text="Salvar" Clicked="SalvaRefeicao"></Button>
          <Button Text="Listagem de refeição" Clicked="MostraLista"></Button>
        </StackLayout>
        
        
      </StackLayout> 
    </ContentView>
   
</ContentPage>